public Boolean companionPlants(String plant1, String plant2) {
    String lettuce = 'lettuce';
    String cucumbers = 'cucumbers';
    String onions = 'onions';
    String carrots = 'carrots';
    String tomatoes = 'tomatoes';

    if(plant1 == plant2) {
        return false;
    } else {
        if (plant1 == lettuce && plant2 == cucumbers) {
            return true;
        } else if(plant1 == lettuce && plant2 == onions) {
            return true;
        } else if(plant1 == onions && plant2 == carrots) {
            return true;
        } else if(plant1 == onions && plant2 == tomatoes) {
            return true;
        }
        return false;
    }
}