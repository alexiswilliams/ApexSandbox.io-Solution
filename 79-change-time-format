public String changeTimeFormat(String strTime) {
    Integer[] timeOfDay = (Integer) strTime.split(':');
    Integer hour = timeOfDay[0];
    Integer minute = timeOfDay[0];
    String am = ' AM';
    String pm = ' PM';

    if(hour < 12) {
        return hour + ':' + minute + am;
    } else {
        return hour + ':' + minute + pm;
    }

}