public Map<String,String> getContextUserInformation(){
    Map<String, String> userInfo = new Map<String, String>();
    String EmailId = UserInfo.getUserEmail();
    userInfo.put('EmailId', EmailId);
    userInfo.put('ProfileId', UserInfo.getProfileId());
    userInfo.put('Type', UserInfo.getUserType());
    userInfo.put('UserName', UserInfo.getUserName());

    return userInfo;
}